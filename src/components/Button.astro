---
// export interface
interface Props{
    text:string
    class:string
    id:string
    
}
const {text,class:className, id:className2 } =Astro.props;
---

<button id={className2} class={className}>{text}</button>

<style lang="scss"is:inline>
    button{
        background: hsl(176, 50%, 47%);
        border-radius: 30px;
        padding: 1em 2.5em;
        color: white;
        font-family:'bold';
        cursor: pointer;
        &:hover{
            background: hsl(176, 72%, 28%);
        }
    }
    
</style>